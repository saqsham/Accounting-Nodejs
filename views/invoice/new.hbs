{{> static }}
{{> header }}
{{> sidebar }}



<div class="page-content">
    <!-- All Items-->
    <div id="items" class="items" style="display: none;">
        <!--{% for item in items %} -->
        {{#each items}}
        <div class="item" model-name={{ this.newModelName }} id="item_{{ this.newModelName }}" item_id="{{ this._id }}"
            tax="{{ this.tax }}" price="{{ this.price }}">
        </div>
        {{/each}}
        <!--{% endfor %}-->
        <div id="my_company" gstin={{ gstin }}></div>
    </div>
    <div id="snackbar">Select Party Name first</div>


    <!-- All Items end-->


    <!-- Page Header-->
    <div class="page-header no-margin-bottom">
        <div class="container-fluid">
            <h2 class="h5 no-margin-bottom">Invoice Creation</h2>
        </div>
    </div>
    <!-- Breadcrumb-->

    <div class="container-fluid">
        <ul class="breadcrumb">
            <li class="breadcrumb-item"><a href="/home">Home</a></li>
            <li class="breadcrumb-item"><a href="#">Invoices</a></li>
            <li class="breadcrumb-item active">New Invoice</li>
        </ul>
    </div>
    <section class="no-padding-top">
        <div class="container-fluid">
            <div class="row">

                <div class="col-lg-12">
                    <div class="block">
                        <div class="title"><strong>Basic Details</strong></div>
                        <div class="block-body">
                            <form method="post" class="form-horizontal">
                                <div class="form-group row margin-row">
                                    <label for="number" class="col-sm-1 form-control-label">No.</label>
                                    <div class="col-sm-2">
                                        <input id="number" name="number" type="text" class="form-control" required>
                                    </div>
                                    <label for="date" class="col-sm-1 form-control-label">Date</label>
                                    <div class="col-sm-2">
                                        <input id="date" name="date" data-date-format="dd-mm-yyyy" type="text"
                                            class="datepicker form-control" required><span
                                            class="input-group-addon"><span class="glyphicon glyphicon-time"></span>
                                        </span>
                                    </div>
                                    <!--label class="col-sm-1 form-control-label">Party A/c Name</label-->
                                    <div class="col-sm-6 div_select" id="div_select_party">
                                        <select id="select_party" name="partyId"
                                            class="selectpicker select_id form-control mb-3 mb-3 "
                                            data-live-search="true" required>
                                            <option value="" disabled selected data-token="Party_Ac_nmae">Party A/c
                                                Name
                                            </option>
                                            <!--{% for party in parties %}-->
                                            {{#each parties}}
                                            <option party-id="{{ this._id }}" value="{{ this.gstin}}"
                                                data-token="{{ this.name }} {{ this.city }}">{{ this.name }}
                                                ,{{ this.city }}</option>
                                            {{/each}}
                                            <!--{% endfor %}-->
                                            <!--option data-token="option 1">option 1</option>
                                                <option data-token="option 1">option 2</option>
                                                <option data-token="option 1">option 3</option>
                                                <option data-token="option 1">option 4</option-->
                                        </select>
                                        <!--small class="help-block-none">Select from alredy Added</small-->
                                    </div>

                                </div>

                                <div id="particulars" onclick="party()">
                                    <div class="line"></div>
                                    <div class="title"><strong>Particulars</strong></div>
                                    <div class="line"></div>
                                    <div class="form-group row margin-row">
                                        <label id="name" class="col-sm-3 form-control-label"
                                            style="max-width: 30%;flex: 0 0 auto;"><strong>Name of
                                                Item</strong></label>
                                        <label id="name" class="col-sm-2 form-control-label"
                                            style="max-width: 11.4%;"><strong>Quantity</strong></label>
                                        <label id="name" class="col-sm-2 form-control-label"><strong>Rate
                                                per</strong></label>
                                        <label id="name" class="col-sm-2 form-control-label"><strong>Amount
                                                Price</strong></label>
                                        <label id="name"
                                            class="col-sm-3 form-control-label"><strong>Options</strong></label>

                                    </div>


                                    <div id="add_new_item_div">

                                        <div id="item_row_1_div" class="form-group row margin-row">
                                            <!--label id="name" name="name" class="col-sm-1 form-control-label">No.</label-->
                                            <div class="col-sm-3 div_select" id="div_select_item"
                                                style="max-width: 30%;flex: 0 0 auto;">
                                                <select id="select_item_1" name="select_item_1"
                                                    class="select_item form-control mb-3 mb-3 selectpicker"
                                                    data-live-search="true" required>
                                                    <option value="blank" disabled selected data-token="Name of Item">
                                                        Name of
                                                        Item
                                                    </option>
                                                    <!--{% for item in items %}-->
                                                    {{#each items}}
                                                    <option value="select_item_1_{{ this.newModelName }}"
                                                        data-token="{{ this.newModelName}}">
                                                        {{ this.newModelName }}
                                                    {{/each}}
                                                    </option>
                                                    <!--{% endfor %}-->
                                                    <!--option value="option 1" data-token="option 1">option 1</option>
                                                    <option value="option 2" data-token="option 2">option 2</option>
                                                    <option value="option 3" data-token="option 3">option 3</option>
                                                    <option value="option 4" data-token="option 4">option 4</option-->
                                                </select>
                                            </div>
                                            <div class="col-sm-2" style="max-width: 11.4%;">
                                                <input myModal1_total_quantity="1" id="quantity_1" name="quantity_1"
                                                    type="text" class="item_quantity form-control"
                                                    placeholder="Quantity" required>
                                            </div>

                                            <div class="col-sm-2">
                                                <input id="rate_per_1" name="rate_per_1" type="text"
                                                    class="item_rate_per form-control" required placeholder="Rate per">
                                            </div>
                                            <div class="col-sm-2">
                                                <input id="amount_1" name="amount_1" type="text"
                                                    class="form-control amount" placeholder="Amount" required>
                                            </div>
                                            <div class="col-sm-3" style="padding-right: 0;">

                                                <button modal-name="myModal1" data-toggle="modal"
                                                    data-target="#myModal1" type="button" class="btn btn-primary"
                                                    style="margin-right: 20px;">Serial No.
                                                </button>
                                                <!--button id="item_row_1" type="button" class="btn btn-danger" style="background-color: red">Delete</button-->
                                            </div>
                                        </div>


                                    </div>
                                    <div class="form-group row">
                                        <!--label class="col-sm-3 form-control-label">Add New Item</label-->
                                        <!--div-- class="col-sm-9">
                                            <div class="row">
                                                <label for="e_way_bill_no" class="col-sm-3 form-control-label">e-Way Bill No.</label>
                                                <div class="col-sm-9">
                                                    <input required id="e_way_bill_no" name="e_way_bill_no" type="text" class="form-control" value="">
                                                </div>
                                            </div>
                                        </div-->
                                        <div class="col-sm-3 ml-auto">
                                            <button id="add_new_item" type="button" class="btn btn-info">Add New Item In
                                                same invoice
                                            </button>

                                        </div>
                                    </div>
                                    <div id="same_state">
                                        <div class="form-group row margin-row">
                                            <div class="col-sm-3" style="max-width: 30%;flex: 0 0 auto;">
                                                <input id="cgs" name="cgs" type="text" class="form-control "
                                                    placeholder="CGST" value="CGST" disabled>
                                            </div>
                                            <div class="col-sm-2" style="max-width: 11.4%;">
                                            </div>
                                            <div class="col-sm-2">
                                            </div>
                                            <div class="col-sm-2">
                                                <input id="cgst" name="cgst" type="text" class="form-control "
                                                    placeholder="Amount" readonly>
                                            </div>
                                            <div class="col-sm-2">
                                            </div>

                                        </div>

                                        <div class="form-group row margin-row">
                                            <div class="col-sm-3" style="max-width: 30%;flex: 0 0 auto;">
                                                <input id="sgs" name="sgs" type="text" class="form-control "
                                                    placeholder="SGST" value="SGST" disabled>
                                            </div>
                                            <div class="col-sm-2" style="max-width: 11.4%;">
                                            </div>
                                            <div class="col-sm-2">
                                            </div>
                                            <div class="col-sm-2">
                                                <input id="sgst" name="sgst" type="text" class="form-control "
                                                    placeholder="Amount">
                                            </div>
                                            <div class="col-sm-2">
                                            </div>

                                        </div>

                                    </div>

                                    <div id="different_state">
                                        <div class="form-group row margin-row">
                                            <div class="col-sm-3" style="max-width: 30%;flex: 0 0 auto;">
                                                <input id="igs" name="igs" type="text" class="form-control "
                                                    placeholder="IGST" value="IGST" readonly disabled>
                                            </div>
                                            <div class="col-sm-2" style="max-width: 11.4%;">
                                            </div>
                                            <div class="col-sm-2">
                                            </div>
                                            <div class="col-sm-2">
                                                <input id="igst" name="igst" type="text" class="form-control "
                                                    placeholder="Amount" readonly>
                                            </div>
                                            <div class="col-sm-2">
                                            </div>

                                        </div>
                                    </div>
                                    <div class="form-group row margin-row">
                                        <div class="col-sm-3" style="max-width: 30%;flex: 0 0 auto;">
                                            <input id="round_off_ip" name="round_off_ip" type="text"
                                                class="form-control " placeholder="Round Off" readonly value="Round off"
                                                disabled>
                                        </div>
                                        <div class="col-sm-2" style="max-width: 11.4%;">
                                        </div>
                                        <div class="col-sm-2">
                                        </div>
                                        <div class="col-sm-2">
                                            <input id="round_off" name="round_off" type="text" class="form-control "
                                                placeholder="Amount" readonly>
                                        </div>
                                        <div class="col-sm-2">
                                        </div>

                                    </div>
                                    <div class="form-group row margin-row">
                                        <div class="col-sm-3" style="max-width: 30%;flex: 0 0 auto;">
                                            <input id="total_amount_ip" name="total_amount_ip" type="text"
                                                class="form-control " placeholder="Total" value="Total amount" disabled>
                                        </div>
                                        <div class="col-sm-2" style="max-width: 11.4%;">
                                        </div>
                                        <div class="col-sm-2">
                                        </div>
                                        <div class="col-sm-2">
                                            <input id="total_amount" name="totalAmount" type="text"
                                                class="form-control " placeholder="Amount" readonly>
                                        </div>
                                        <div class="col-sm-2">
                                        </div>

                                    </div>
                                </div>
                                <div class="form-group row margin-row" id="e-way">
                                    <div class="col-sm-3" style="max-width: 28.5%;flex: 0 0 auto;">
                                    </div>
                                    <div class="row col-sm-4" style="padding: 6px 0 6px 0;background: currentColor;">
                                        <div class="col-sm-6" style="max-width: 50%;">
                                            <input id="e_way_ip" name="e_way_ip" type="text" class="form-control "
                                                placeholder="e-Way Bill No." readonly value="e-Way Bill No." disabled>

                                        </div>
                                        <div class="col-sm-6">
                                            <input style="background: #2d3035" id="e_way" name="eWay" type="text"
                                                class="form-control " placeholder="e-Way No.">
                                        </div>
                                    </div>
                                    <div class="col-sm-2">

                                    </div>
                                    <div class="col-sm-2">
                                    </div>

                                </div>

                                <!--div class="form-group row margin-row">
                                <div class="col-sm-">
                                            <div class="row">
                                                <label for="e_way_bill_no" class="col-sm-3 form-control-label">e-Way Bill No.</label>
                                                <div class="col-sm-9">
                                                    <input required id="e_way_bill_no" name="e_way_bill_no" type="text" class="form-control" value="">
                                                </div>
                                            </div>
                                        </div>
                                    </div-->
                                <div class="line"></div>
                                <div class="form-group row margin-row">
                                    <label for="narration" class="col-sm-12 form-control-label">Narration</label>
                                    <div class="col-sm-12">
                                        <textarea id="narration" name="narration" rows="3"
                                            class="form-control"></textarea>
                                    </div>

                                </div>

                                <div class="line"></div>
                                <div class="form-group row">
                                    <div class="col-sm-12 ml-auto ">
                                        <button type="reset" class="btn btn-secondary">Cancel</button>
                                        <button type="submit" class="btn btn-primary">Save changes</button>
                                    </div>
                                </div>

                                <div id="all_modals">
                                    <div id="myModal1" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel1"
                                        aria-hidden="true" class="modal fade text-left">
                                        <div role="document" class="modal-dialog">
                                            <div class="modal-content">
                                                <div class="modal-header"><strong id="exampleModalLabel1"
                                                        class="modal-title">Serial
                                                        Numbers</strong>
                                                    <button type="button" data-dismiss="modal" aria-label="Close"
                                                        class="close focus_on_add_new"><span
                                                            aria-hidden="true">Ã—</span></button>
                                                </div>
                                                <div class="modal-body">
                                                    <p>How about all the serial numbers here.</p>
                                                    <div class="myModal1_add_serial">

                                                        <div class="form-group" id="myModal1_serial_no_remove_1_div">
                                                            <div class="row">
                                                                <div class="col-md-8">
                                                                    <input id="myModal1_serial_no_1"
                                                                        name="myModal1_serial_no_1" type="text"
                                                                        placeholder="Serial Number"
                                                                        class="serial_no form-control">
                                                                </div>
                                                                <div class="col-md-4">
                                                                    <label>
                                                                        <p></p>
                                                                    </label>
                                                                    <input type="button"
                                                                        id="myModal1_serial_no_remove_1" value="Delete"
                                                                        class="btn btn-danger serial_no_remove"
                                                                        style="background-color: red;">
                                                                </div>
                                                            </div>
                                                        </div>
                                                    </div>
                                                    <!--div class="form-group">
                                                          <label>Password</label>
                                                          <input type="password" placeholder="Password" class="form-control">
                                                        </div-->
                                                    <div class="form-group">
                                                        <input modal-name="myModal1" type="button" value="Add"
                                                            class="button_serial_no btn btn-primary ">
                                                    </div>
                                                </div>
                                                <div class="modal-footer">
                                                    <button type="button" data-dismiss="modal"
                                                        class="btn btn-secondary focus_on_add_new">Close
                                                    </button>
                                                    <button modal-name="myModal1" type="button"
                                                        class="btn btn-primary modal_save focus_on_add_new">Save changes
                                                    </button>
                                                </div>
                                            </div>
                                        </div>
                                    </div>

                                </div>


                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    {{> footer }}