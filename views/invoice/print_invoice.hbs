    <link rel="stylesheet" href="css/print_page.css">

    <script src="{{ url_for('static',filename='vendor/jquery/jquery.min.js') }}"></script>
    <style>
        @page {
            size: auto;   /* auto is the initial value */
            /* this affects the margin in the printer settings */
